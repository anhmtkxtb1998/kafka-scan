services:
  screen_ip:
    build:
      context: .
    container_name: screen_ip
    environment:
      KAFKA_BOOTSTRAP_SERVERS: ${KAFKA_BOOTSTRAP_SERVERS}
      TOPIC_CHECK_PORT: ${TOPIC_CHECK_PORT}
      TOPIC_CHECK_PORT_RESULTS: ${TOPIC_CHECK_PORT_RESULTSn}
    volumes:
      - ./schedule_config.json:/app/schedule_config.json:ro
      - ./screenshots/:/app/screenshots/
    dns:
      - 86.0.188.1
